# Production Environment Configuration
# IMPORTANT: Copy this to .env.production and fill in actual values
# DO NOT commit .env.production to version control

# Node Environment
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/purpose_agnostic_agent

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration (GENERATE NEW SECRET!)
# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET
JWT_EXPIRATION=24h

# API Keys (GENERATE NEW KEYS!)
# Generate with: openssl rand -hex 32
ADMIN_API_KEY=REPLACE_WITH_GENERATED_KEY
USER_API_KEY=REPLACE_WITH_GENERATED_KEY

# LLM Provider Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
OLLAMA_URL=http://ollama:11434

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# CORS Configuration (REPLACE WITH ACTUAL DOMAINS!)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Observability (Optional)
SEQ_URL=http://seq:5341
SEQ_API_KEY=your_seq_api_key_here
PROMETHEUS_ENABLED=true

# Security
SESSION_EXPIRATION_HOURS=24
MAX_REQUEST_SIZE=1mb

# Storage
STORAGE_TYPE=postgres
PERSONA_FILE_PATH=/app/config/personas.json
